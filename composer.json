{
  "require": {
    "php": ">=8.0",
    "aws/aws-sdk-php": "^3.300",
    "firebase/php-jwt": "^6.10",
    "phpmailer/phpmailer": "^6.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "SEE\\": "api/",
      "SEE\\Services\\": "services/",
      "SEE\\Models\\": "models/"
    }
  },
  "scripts": {
    "test": "phpunit tests/",
    "post-install-cmd": [
      "@php -r \"if (!file_exists('logs')) mkdir('logs', 0755, true);\"",
      "@php -r \"if (!file_exists('api/config/database.php')) copy('api/config/database.example.php', 'api/config/database.php');\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
